@model User

@{
    ViewBag.Title = "HiddenInputsJQueryValidate1_9";
}

<h2>HiddenInputsJQueryValidate1_9</h2>

@using (Html.BeginForm())
{
    @Html.LabelFor(u => u.UserName)<br />
    <div>   
    @(
        Html.Telerik().EditorFor(u => u.UserName)
        .Tools(tools=>
            tools.Clear()
            .Bold()
            .Italic()
            .Underline())
    )
    @Html.ValidationMessageFor(u => u.UserName)
     </div>
    @Html.LabelFor(u => u.Email)<br />
    @(
        Html.Telerik().DropDownListFor(u=>u.Email)
        .BindTo(new SelectList((IEnumerable<string>)ViewData["emails"]))
    )
     @Html.ValidationMessageFor(u => u.Email)<br />
    <input type="submit" value="Save" />
}

@section HeadContent
{
    <script src="../../IE8ValidationUsing-1.6.4/jquery-1.6.4.min.js" type="text/javascript"></script>
    <script src="../../IE8ValidationUsing-1.6.4/jquery.validate.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}

<script type="text/javascript">
    //By default jquery.validate 1.9 ignores hiddent inputs
    $(document).ready(function () {
        var settings = $(document.forms[0]).data("validator").settings;
        settings.ignore = "";
    });
</script>