@{
    ViewBag.Title = "IE8ValidationOlderJQuery";
}

<h2>IE8ValidationOlderJQuery</h2>

@(
 Html.Telerik().Grid<User>()
        .Name("Grid")
        .ToolBar(tools=>
            {
                tools.Insert();
                tools.SubmitChanges();
            })
        .DataKeys(keys=>keys.Add(u=>u.UserID))
        .DataBinding(binding => binding.Ajax()
            .Select("_Select", "Home")
            .Update("_SaveBatchEditing","Home"))
        .Columns(columns =>
        {
            columns.Bound(u => u.UserName);
            columns.Bound(u => u.Email);         
        })
        .Editable(edit=>edit.Mode(GridEditMode.InCell))        
)

@*jquery.validete version 1.8*@

@section HeadContent
{
    <script src="../../IE8ValidationUsing-1.5.1/jquery-1.5.1.min.js" type="text/javascript"></script>
    <script src="../../IE8ValidationUsing-1.5.1/jquery.validate.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}