<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    @(Html.Telerik().StyleSheetRegistrar().DefaultGroup(group => group
        .Add("telerik.common.css").Add("telerik.default.css").Combined(true).Compress(true))
    )
</head>
<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <h1>My MVC Application</h1>
            </div>
        </div>

        @(Html.Telerik().Menu()
        .Name("menu")
        .Items(menu => {
            menu.Add().Text("Home").Action("Index", "Home");
            menu.Add().Text("Sync Upload").Action("Index", "SyncUpload");
            menu.Add().Text("Async Upload").Action("Index", "AsyncUpload");
        }))

        <div id="main">
            @RenderBody()
            <div id="footer">
            </div>
        </div>
    </div>
    @(Html.Telerik().ScriptRegistrar()
        .DefaultGroup(group => group
            .Add("jquery.validate.min.js")
            .Combined(true).Compress(true))
        .jQuery(false)
    )
</body>
</html>
